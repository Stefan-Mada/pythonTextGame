{
  "tutorial":
  [
    {
      "line": 0,
      "text": "After a line of text appears, press enter to see the next line."
    },
    {
      "line": 1,
      "text": "Sometimes, you will have to make a choice. Type in an answer, then press enter."
    },
    {
      "line": 2,
      "text": "Good luck!",
      "input_new_story_pos": {
        "default": ["intro", 0]
      }
    }
  ],
  "intro":
  [
    {
      "line": 0,
      "text": "What is your name?",
      "input_required": true,
      "possible_inputs": ["Devon", "Theagenes", "Sophie", "Redcrosse"],
      "input_change_var": "player_name"
    },
    {
      "line": 1,
      "text": "Fight or die?",
      "input_required": true,
      "possible_inputs": ["fight", "die"],
      "input_new_story_pos":   {
        "fight": ["part2", 0],
        "die": ["part3", 0]
      }
    }
  ],
  "part2":
  [
    {
      "line": 0,
      "text": "You have slayed the evil monster, {player_name}."
    },
    {
      "line": 1,
      "text": "You continue onto your next journey.",
      "change_state": "END"
    }
  ],
  "part3":
  [
    {
      "line": 1,
      "text": "You have died.",
      "change_state": "END"
    }
  ]
}